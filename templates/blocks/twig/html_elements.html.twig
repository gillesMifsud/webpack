{% extends sonata_block.templates.block_base %}

{% block block %}
    <style>
        .tabs {
            justify-content: center;
            display: flex;
        }

        .tabs-title {
            text-align: center;
            flex-grow: 1;
        }
    </style>
    <div class="html_elements">
        <ul class="tabs" data-responsive-accordion-tabs="accordion medium-accordion large-tabs"
            data-allow-all-closed="true" id="html-tabs">
            {#Buttons#}
            <li class="tabs-title"><a href="#buttons">Boutons</a></li>
            {#Text / Icons#}
            <li class="tabs-title"><a href="#texticons">Textes / Icones</a></li>
