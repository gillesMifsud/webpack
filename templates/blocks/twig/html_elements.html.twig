                                            <span class="form-error" id="error-pays">Champ requis</span>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="columns small-12">
                            <fieldset class="fieldset">
                                <legend>Forms selects triggers hidden content</legend>
                                <div class="row">
                                    <div class="small-12 large-6 columns">
                                        <div data-materialInput>
                                            <select name="" id="pays" required aria-errormessage="error-pays" data-select-toogler>
                                                <option value=""></option>
                                                <option value="france">France</option>
                                                <option value="deutschland">Deutschland</option>
                                                <option value="england">England</option>
                                            </select>
                                            <label for="pays">Pays</label>
                                            <span class="form-error" id="error-pays">Champ requis</span>
                                        </div>
                                    </div>

                                    <div class="small-12 large-6 columns">
