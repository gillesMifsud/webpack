{% extends get_admin_template('base_list_field', admin.code) %}

{% block field %}
    {%- if value is empty -%}
        &nbsp;
    {%- else -%}
        {% set _timezone = field_description.options.timezone|default(null) %}
        {% set _format = field_description.options.format|default(null) %}
        {{ value|localizeddate('long', 'short', null, _timezone, _format) }}
    {%- endif -%}
{% endblock %}
