; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,html,twig}]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.{css,scss}]
indent_style = space
indent_size = 2

# Ignore minified
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

[*.{yml,yaml}]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 80

[*.rst]
indent_style = space
indent_size = 3

[{.travis.yml,package.json}]
# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
